<div class="row">
  <div class="offset1 span8">
    <%= form_for(@program_id, class: "horizontal-form") do |f| %>
      <div class="row">
        <%= render 'shared/error_messages' %>
      </div>
      <div class="row">
        <%= f.label 'Name:' %> <%= f.text_field :name %>
      </div>
      <div class="row">
        <%= f.label 'Description:' %> <%= f.text_field :description %>
      </div>
      <div class="row">
        <label class="checkbox">
          <%= f.check_box :open %>
          survey open: (accepting responses)
        </label>
      </div>
      <div class="row">
        <label class="checkbox">
          <%= f.check_box :locked %>
          program locked? (no changes allowed)
        </label>
      </div>
      <div class="row">
        <label class="checkbox">
          <%= f.check_box :suppress_hidden_participants %>
          hidden participants?
        </label>
      </div>
      <%= f.submit "Save", class: "btn btn-small btn-primary" %> 
    <% end %>
  </div>
</div>