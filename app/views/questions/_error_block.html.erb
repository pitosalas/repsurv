<% if @question.errors.any? %> 
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@question.errors.count, "error") %>.
      <ul>
        <% @question.errors.full_messages.each do |msg| %>
          <li>* <%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div> 
<% end %>