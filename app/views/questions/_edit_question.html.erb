<%= form_for([@program, @question], class: "horizontal-form") do |f| %>
  <div class="container-fluid">
    <legend>Question Form</legend>
    <div class="row-fluid">
      <div class="span8">
        <div class="row-fluid">
          <div class="span12 bgcolor">
            <%= render 'error_block'%>
          </div>
        </div>         
        <div class="row-fluid">
          <div class="span6 bgcolor">
            <div class="control-group">
              <label class="control-label" for="text">Text of Question</label>
              <div class="controls">
                <%= f.text_field :text, id: "question-text" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6 bgcolor">
            <div class="control-group">
              <label class="control-label" for="pos">Position on page</label>
              <div class="controls">
                <%= f.number_field :pos, :min => 1, :size => 1 %>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6 bgcolor">
            <div class="control-group">
              <label class="checkbox" for="active">
                <div class="controls">
                  <%= f.check_box :active %>
                  Active Question?
                </div>
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%= f.submit "Save Question", class: "btn btn-small btn-primary" %> 
  </div>
<% end %>



