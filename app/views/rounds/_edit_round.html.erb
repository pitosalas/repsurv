<%= form_for([@program, @round], class: "horizontal-form") do |f| %>
  <div class="container-fluid">
    <legend>Round Form</legend>
    <div class="row-fluid">
      <div class="span8">
        <div class="row-fluid">
          <div class="span12 bgcolor">
            <%= render 'shared/error_messages'%>
          </div>
        </div>         
        <div class="row-fluid">
          <div class="span6 bgcolor">
            <div class="control-group">
              <label class="control-label" for="number">Round number</label>
              <div class="controls">
                <%= f.text_field :number %>
              </div>
            </div>
          </div>
        </div>

        <%= wrap_control_group do %>
          <label class="checkbox" for="open">
            <div class="controls">
              <%= f.check_box :open %>
                Open for responses?
            </div>
          </label>
        <% end %>
      </div>
    </div>
  <%= f.submit "Save Round", class: "btn btn-small btn-primary" %> 
  </div>
<% end %>


