<%= form_for([@program, @round], class: "horizontal-form") do |f| %>
  <div class="container-fluid">
    <legend>Round Form</legend>
    <div class="row-fluid">
      <div class="span8">
        <div class="row-fluid">
          <div class="span12 bgcolor">
            <%= render 'shared/error_messages'%>
          </div>
        </div>         
        <div class="row-fluid">
          <div class="span6 bgcolor">
            <div class="control-group">
              <label class="control-label" for="text">Round number</label>
              <div class="controls">
                <%= f.text_field :number %>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6 bgcolor">
            <div class="control-group">
              <label class="control-label" for="start">Start</label>
              <div class="controls">
                <%= f.text_field :start %>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6 bgcolor">
            <div class="control-group">
              <label class="control-label" for="fin">Fin</label>
              <div class="controls">
                <%= f.text_field :fin %>
              </div>
            </div>
          </div>
        </div>


        <div class="row-fluid">
          <div class="span6 bgcolor">
            <div class="control-group">
              <label class="control-label" for="status">Status of round</label>
              <div class="controls">
                <%= f.text_field :status %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%= f.submit "Save Round", class: "btn btn-small btn-primary" %> 
  </div>
<% end %>


