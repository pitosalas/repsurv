<%= content_tag :tr do %>
  <%= content_tag :td do %>
    <%= Question.find(response.question_id).text %>
  <% end %>
  <% 5.times do |answer| %>
    <%= content_tag :td do %>
      <% name = "Q#{response.question_id}" %>
      <%= radio_button_tag name, "#{answer}", (response.response_as_i == answer) %>
    <% end %>
  <% end %>
<% end %>
