<%= form_for(@user, class: "horizontal-form") do |f| %>
  <div class="container-fluid">
    <legend>User Form</legend>
    <div class="row-fluid">
      <div class="span8">
        <div class="row-fluid">
          <div class="span12 bgcolor">
            <%= render 'error_block'%>
          </div>
        </div>         
        <div class="row-fluid">
          <div class="span6 bgcolor">
            <div class="control-group">
              <label class="control-label" for="text">Name</label>
              <div class="controls">
                <%= f.text_field :name %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%= f.submit "Save User", class: "btn btn-small btn-primary" %> 
<% end %>